<nav class="nav">
  <a href="/" class="nav__logo">
    <img src="/images/logo.svg" />
  </a>

  <button class="nav__toggle" aria-expanded="false" aria-label="Menu">
    &#9776;
  </button>

  <div class="nav__links">
    <a href="/">Home</a>
    <a href="/about">About</a>
    <a href="/blog">Blog</a>
    <a href="/photos">Photos</a>
  </div>
</nav>

<style lang="scss">
  @use '../styles/abstracts' as *;

  .nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: $spacing-unit * 2;
    position: relative;
  }

  .nav__logo {
    width: 100px;
  }

  .nav__toggle {
    display: none;
    background: none;
    border: none;
    color: $color-text;
    font-size: 1.5rem;
    cursor: pointer;
  }

  .nav__links {
    display: flex;
    gap: $spacing-unit * 4;

    a {
      font-size: 1.25rem;
      text-decoration: none;
      text-transform: uppercase;

      &:first-child {
        display: none;
      }

      &:hover {
        color: $color-accent;
      }
    }
  }

  @media (max-width: 768px) {
    .nav__toggle {
      display: block;
    }

    .nav__links {
      display: none;
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      margin: 0;
      flex-direction: column;
      background: $color-bg;
      padding: 0 ($spacing-unit * 2) ($spacing-unit * 2);
      
      &[data-open] {
        display: flex !important;
      }

      a:first-child {
        display: block;
      }  
    }

    .nav__logo {
      text-transform: uppercase;
      text-decoration: none;
      img {
        display: none;
      }
    }
  }
</style>

<script>
  const toggle = document.querySelector('.nav__toggle');
  const links = document.querySelector('.nav__links');

  toggle?.addEventListener('click', () => {
    const isOpen = links?.toggleAttribute('data-open');
    toggle.setAttribute('aria-expanded', String(isOpen));
  });
</script>